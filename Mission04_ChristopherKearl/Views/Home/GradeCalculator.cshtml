@{
    ViewData["NavBarTag"] = "Grade Calculator";
}
<!-- • A "Grade Calculator" form that takes as input a percentage scored for each grade category listed in the syllabus-->
<div class="card grade-calculator">
    <h5 class="pt-3">Want to calculate your potential grade in IS 413?</h5>

    <form class="row g-3 needs-validation p-3">

        <div class="col-md-4">
            <label for="validationCustom01" class="form-label">Assignments</label>
            <input type="number" class="form-control" id="validationCustom01" required>
            <div class="valid-feedback">
                Please enter your Assignments numeric grade
            </div>
        </div>
        <div class="col-md-4">
            <label for="validationCustom02" class="form-label">Group Project</label>
            <input type="number" class="form-control" id="validationCustom02" required>
            <div class="valid-feedback">
                Please enter your Group Project numeric grade
            </div>
        </div>
        <div class="col-md-4">
            <label for="validationCustom03" class="form-label">Quizzes</label>
            <div class="input-group has-validation">
                <input type="number" class="form-control" id="validationCustom03" required>
                <div class="invalid-feedback">
                    Please enter your Quizzes numeric grade
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <label for="validationCustom04" class="form-label">Midterm Exam</label>
            <input type="number" class="form-control" id="validationCustom04" required>
            <div class="invalid-feedback">
                Please enter your Midterm Exam numeric grade
            </div>
        </div>
        <div class="col-md-4">
            <label for="validationCustom05" class="form-label">Final Exam</label>
            <input type="number" class="form-control" id="validationCustom05" required>
            <div class="invalid-feedback">
                Please enter your Final Exam numeric grade
            </div>
        </div>
        <div class="col-md-4">
            <label for="validationCustom06" class="form-label">INTEX</label>
            <input type="number" class="form-control" id="validationCustom06" required>
            <div class="invalid-feedback">
                Please enter your INTEX numeric grade
            </div>
        </div>
        <div id="grade-calc-submit" class="col-12">
            <button class="btn btn-primary" type="button" value="submit">Generate Grade</button>
        </div>

    </form>


</div>