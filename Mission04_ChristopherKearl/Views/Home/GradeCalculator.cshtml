@model Mission04_ChristopherKearl.Models.Grade

@{
    ViewData["NavBarTag"] = "Grade Calculator";
}
<!-- • A "Grade Calculator" form that takes as input a percentage scored for each grade category listed in the syllabus-->
<div class="card grade-calculator">
    <h5 class="pt-3">Want to calculate your potential grade in IS 413?</h5>

    @using (Html.BeginForm())
    {

        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.GradeID)
<div class="col-md-4">
    @Html.LabelFor(model => model.Assignments, htmlAttributes: new { @class = "form-label" })
    @Html.EditorFor(model => model.Assignments, new { htmlAttributes = new { @class = "form-control", id = "validationCustom01" } })
    @Html.ValidationMessageFor(model => model.Assignments, "", new { @class = "text-danger" })
    <div class="valid-feedback">
        Please enter your Assignments numeric grade
    </div>
</div>
<div class="col-md-4">
    @Html.LabelFor(model => model.GroupProject, htmlAttributes: new { @class = "form-label" })
    @Html.EditorFor(model => model.GroupProject, new { htmlAttributes = new { @class = "form-control", id = "validationCustom02", type ="number" } })
    @Html.ValidationMessageFor(model => model.GroupProject, "", new { @class = "text-danger" })
    <div class="valid-feedback">
        Please enter your Group Project numeric grade
    </div>
</div>
<div class="col-md-4">
    @Html.LabelFor(model => model.Quizzes, htmlAttributes: new { @class = "form-label" })
    @Html.EditorFor(model => model.Quizzes, new { htmlAttributes = new { @class = "form-control", id = "validationCustom03" } })
    @Html.ValidationMessageFor(model => model.Quizzes, "", new { @class = "text-danger" })
    <div class="input-group has-validation">
        <div class="invalid-feedback">
            Please enter your Quizzes numeric grade
        </div>
    </div>
</div>
<div class="col-md-4">
    @Html.LabelFor(model => model.MidtermExam, htmlAttributes: new { @class = "form-label" })
    @Html.EditorFor(model => model.MidtermExam, new { htmlAttributes = new { @class = "form-control", id = "validationCustom04" } })
    @Html.ValidationMessageFor(model => model.MidtermExam, "", new { @class = "text-danger" })
    <div class="invalid-feedback">
        Please enter your Midterm Exam numeric grade
    </div>
</div>
<div class="col-md-4">
    @Html.LabelFor(model => model.FinalExam, htmlAttributes: new { @class = "form-label" })
    @Html.EditorFor(model => model.FinalExam, new { htmlAttributes = new { @class = "form-control", id = "validationCustom05" } })
    @Html.ValidationMessageFor(model => model.FinalExam, "", new { @class = "text-danger" })
    <div class="invalid-feedback">
        Please enter your Final Exam numeric grade
    </div>
</div>
<div class="col-md-4">
    @Html.LabelFor(model => model.Intex, htmlAttributes: new { @class = "form-label" })
    @Html.EditorFor(model => model.Intex, new { htmlAttributes = new { @class = "form-control", id = "validationCustom06" } })
    @Html.ValidationMessageFor(model => model.Intex, "", new { @class = "text-danger" })
    
    <div class="invalid-feedback">
        Please enter your INTEX numeric grade
    </div>
</div>
    
    <div id="grade-calc-submit" class="col-12">
        <input class="btn btn-primary" type="submit" value="Generate Grade"/>

    </div>

    }


</div>